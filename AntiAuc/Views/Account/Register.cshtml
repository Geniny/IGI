@model AntiAuc.Models.RegisterModel
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<br />
<style>
    .label {
        color: orange;
    }
</style>
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div style="
                margin: 0;
                position: absolute;
                top: 50%;
                left: 50%;
                margin-right: -50%;
                transform: translate(-50%, -50%)">

        <h2 class="text-center" style="color:orange;">@Localizer["register"]</h2>
        <div class="form-group">
            <input type="email" asp-for="Email" placeholder="@Localizer["email"]" size="50" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <input asp-for="Password" placeholder="@Localizer["password"]" size="50" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" placeholder="@Localizer["confirm"]" size="50" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <input class="btn btn-lg btn-outline-warning" type="submit" value="@Localizer["resicteraction"]" style="margin-left:25%; margin-right:-25%;" />
        </div>
    </div>
</form>